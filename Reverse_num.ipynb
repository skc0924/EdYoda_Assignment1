   "id": "e502d095",
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Input the string: Edyoda\n",
      "The reversed string is: adoydE"
     ]
    }
   ],
   "source": [
    "a = input(\"Input the string: \")\n",
    "i=(len(a)-1)\n",
    "print(\"The reversed string is:\",end=\" \")\n",
    "while i>-1:\n",
    "    print((a[i]),end=\"\")\n",
    "    i=i-1"
   ]
